<div id="<%= dom_id ai_message %>" class="p-3 " >
<div class="d-flex justify-content-end">
      <%= button_to ai_message, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn text-danger delete-button " do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
</div>
  <div class="d-flex justify-content-end align-items-center">
    <% if current_user.avatar.attached? %>
      <%= image_tag(current_user.avatar, style: "width: 50px; border-radius: 25px;") %>
    <% else %>
      <i class="fa-solid fa-user-tie"></i>
    <% end %>
    <% if ai_message.body[0].present? %>
      <p class="px-1 text-primary-emphasis"><strong><%=ai_message.role[0]%></strong>: <%= ai_message.body[0] %></p>
    <% end %>
  </div>
  <div class="d-flex justify-content-start align-items-start">
    <% bot_avatar = "https://cdn.create.vista.com/api/media/small/176577870/stock-vector-cute-smiling-funny-robot-chat-bot" %>
    <%= image_tag(bot_avatar, style:  "width: 50px; border-radius: 25px;") %> <span><%= markdown_to_html(ai_message.body[1]) %></span>

  </div>

</div>
