<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'border rounded-1 p-4 m-4'}) do |f| %>
  <h2>Log in</h2>
  <div class="mb-3">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" },
                 as: :string,
  input_html: { class: "form-control" } %>
  </div>
  <div class="mb-3">
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
                as: :password,
  input_html: { class: "form-control"} %>
  </div>
  <div class="mb-3 form-check">
    <%= f.input :remember_me, as: :boolean, input_html: { class: 'form-check-input' } if devise_mapping.rememberable? %>
  </div>
    <%= button_tag type: 'submit', class: 'btn log_in col-12' do %>
      Log in
    <% end %>
  <div class="mb-3 form_actions">
  </div>
  <%= render "users/shared/links" %>
<% end %>
