<div id="<%= dom_id job_listing %>">
  <p>
    <strong>Title:</strong>
    <%= job_listing.title %>
  </p>

  <p>
    <strong>Company:</strong>
    <%= job_listing.company %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= job_listing.location %>
  </p>

  <p>
    <strong>Salary:</strong>
    <%= job_listing.salary %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= job_listing.status %>
  </p>

  <p>
    <strong>Details:</strong>
    <%= job_listing.details %>
  </p>

  <p>
    <strong>Details summary:</strong>
    <%= job_listing.details_summary %>
  </p>

  <p>
    <strong>Applicant:</strong>
    <%= job_listing.applicant_id %>
  </p>

  <p>
    <strong>Points:</strong>
    <%= job_listing.total_points %>
  </p>

  <p>
    <strong>Board:</strong>
    <%= job_listing.board_id %>
  </p>

</div>
