<div class="modal fade" id="interviewModal" tabindex="-1" aria-labelledby="interviewModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="interviewModalLabel">
        <%locals[:job_listing].status.capitalize%> Interview</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render "interviews/form", locals: {interview: locals[:interview], job_listing: locals[:job_listing]} %>
      </div>
    </div>
  </div>
</div>


      <%= link_to new_interview_path, class: "px-5", data: { bs_toggle: "modal", bs_target: "#interviewModal" } do %>
        <i class="fa-solid fa-plus"></i> Interview
      <%end%>
